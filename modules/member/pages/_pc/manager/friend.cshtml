            @{
            string nametypeStr = _M["email"];
            if (d_member["login_emailid"] == null || d_member["login_emailid"] == "")
            {
                nametypeStr = _M1_id;
            }
            }
		        <a class="hand" onclick="OpenWindow('@g["s"]/?r=@r&system=popup.papersend&iframe=Y&id=@nametypeStr');">@_M[_HS["nametype"]] (@nametypeStr)</a>
