                {
                    <span class="new">new</span>
                }                

	        </td>
            @{
                string friendType = "";
                string cateStr = "-";
                if ((R["rel"] != null && R["rel"] != "") && R["rel"] != "0")
                {
                    friendType = "맞팔";
                }
                else
                {
                    if (type == "follower")
                    {
                        friendType = "팔로워";
                    }
                    else
                    {
                        friendType = "팔로윙";
                    }
                }

                if (R["category"] != null && R["category"] != "")
                {
                    if (type != "follower")
                    {
                        cateStr = R["category"];
                    }
                }
            
            }
	        <td class="cat">@friendType</td>
	        <td class="cat">@cateStr</td>
	        <td>@R["d_regis"].ToString("yyyy.MM.dd HH:mm")</td>
	        </tr> 
        }
    }  
	    </tbody>
	    </table>
	

