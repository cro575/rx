@{
    

    var mbruid = PageData[1];
    var m = PageData[2];

    dynamic g = PageData[0];
    dynamic _HS = PageData[3];

    dynamic M = Session["mbrdata"];
    dynamic d_member = _DB.Get_code("member");  
    
