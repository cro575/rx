    //dynamic M = _DB.GetDbData_M(AppState["table_s_mbrdata"].ToString(), "memberuid="+mbruid);
    
    string url_reset = g["s"] + "/?r=" + r + "&iframe=Y&m=" + m + "&front=" + front + "&mbruid=" + M["memberuid"];
