            string[] _tagarr1 = R["tag"].Split(',');
            foreach (string _t in _tagarr1)
            {
                if (_t == null || _t == "")
                {
                    continue;
                }

                dynamic _TAG = _DB.GetDbData_M(AppState["table_s_tag"].ToString(), "site='" + R["site"] + "' and date='" + _tagdate + "' and keyword='" + _t + "'");

