                {
                    if (_TAG["hit"] > 1)
                    {
                        string UPDATE_TAG_SQL = "UPDATE " + AppState["table_s_tag"].ToString() + " SET hit=hit-1 WHERE uid='" + _TAG["uid"];
                        @_DB.Execute(UPDATE_TAG_SQL);
                    }
                    else
                    {
                        string DELETE_TAG_SQL = "DELETE FROM " + AppState["table_s_tag"].ToString() + " WHERE uid=" + _TAG["uid"];
