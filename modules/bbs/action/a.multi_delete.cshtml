                            }

                            if (U["type"] == "2")
                            {
                                File.Delete(g["path_root_ps"] + g["path_file"] + U["folder"] + "\\" + U["thumbname"]);
                            }
                        }
                        catch (System.IO.IOException e)
                        {
                        }    
                    }
			    }
		    }
	    }

