@:<th>차단</th>
@:<th>리다이렉트</th>
@:<th>연결주소</th>
@:</thead>
@:<tbody>
@:@_MENU_DUMP.getMenuXls(s, AppState["table_s_menu"], 0, 0, 0, 0, mset, "", r, _HS)
@:</tbody>
@:</table>

        return;

    }
    else
    {   
        
@:@(_HS["name"])-메뉴구조
