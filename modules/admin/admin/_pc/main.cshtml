	}
	function delWidget(i)
	{
		if (!moveObject[i]) return;
		if (confirm('정말로 삭제하시겠습니까? '))
		{
			moveObject[i].style.display = "none";
			blocktitle[i] = '';
			blockarray[i] = '';
