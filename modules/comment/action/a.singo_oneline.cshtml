    {
        string UPDATE_ONELINE_SQL = "UPDATE " + AppState["table_s_oneline"] + " SET singo=singo+1 WHERE uid=" + R["uid"];
        @_DB.Execute(UPDATE_ONELINE_SQL);
        
        Session["module_" + m + "_osingo"] += "[" + R["uid"] + "]";
        
        @_System.getLink("", "", "신고처리 되었습니다.", "")
        return;
