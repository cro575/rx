    var name = Request["name"];
    var folder = Request["folder"];
    
    @_System.checkAdmin(my["admin"], 0)
    
    name = name.Trim();
    folder = folder.Trim();
    
    if(name==null || name=="") {
        return;
    }
    else if (folder==null || folder=="") {
        return;
    }

    Directory.CreateDirectory(g["path_root_ps"] + g["path_widget"] + folder);    
    
    StreamWriter sw = new  StreamWriter(g["path_root_ps"] + g["path_widget"] + folder + "\\name.txt");
    sw.Write(name);
    sw.Flush();
    sw.Close();
    
    @_System.getLink("reload","parent.","","")
    return;
