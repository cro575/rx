    var g = PageData[0];
    var r = PageData[1];
    var d_layout = PageData[2];
    
    string _themeConfig = Request["_themeConfig"];
    string sns_hide = "";
    string sns_t = "";
    string sns_f = "";
    string sns_m = "";
    string sns_y = "";
    
    dynamic LAYOUT_ARR = _DB.Get_code_layout(d_layout["dir"]);   
    
    if(LAYOUT_ARR["sns_hide"] == "1")
    {
        sns_hide = "checked='checked'";
    }    
    
    DirectoryInfo di = new DirectoryInfo(g["path_root_ps"] + g["path_module"] + "social");
    
    if(LAYOUT_ARR["sns_t"] == "1")
    {
        sns_t = "checked='checked'";
    }
    if(LAYOUT_ARR["sns_f"] == "1")
    {
        sns_f = "checked='checked'";
    }
    if(LAYOUT_ARR["sns_m"] == "1")
    {
        sns_m = "checked='checked'";
    }
    if(LAYOUT_ARR["sns_y"] == "1")
    {
        sns_y = "checked='checked'";
    }
}

